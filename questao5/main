#include "vetor.h"
#include "vetor.c"
#include <stdio.h>
#include <stdlib.h>
#include <time.h>


int main(){

    tipoVetor v, copia;
    criaVetor(&v, 100000);
    criaVetor(&copia, 100000);
    preencheVetor(&v);
    float tempo_tot = 0;
    int n,k;
    clock_t tempoini, tempof;

    FILE *arquivo1 = fopen("temposSorts.txt", "w");
    if (arquivo1 == NULL) {
        printf("Erro ao abrir arquivo!\n");
        return 1;
    }
    printf("carregando\n");
    

    for(int i = 0; i < 10; i++){
        fprintf(arquivo1, "rodada %d\n",i);
        
        copiaVetor(&copia, &v);
        tempoini = clock();
        bubbleSort(&copia);
        tempof = clock();
        tempo_tot = ((float)(tempof - tempoini) / CLOCKS_PER_SEC);
        fprintf(arquivo1, "%.8f\n", tempo_tot);

        copiaVetor(&copia, &v);
        tempoini = clock();
        insertionSort(&copia);
        tempof = clock();
        tempo_tot = ((float)(tempof - tempoini) / CLOCKS_PER_SEC);
        fprintf(arquivo1, "%.8f\n", tempo_tot);
    
        copiaVetor(&copia, &v);
        tempoini = clock();
        selectionSort(&copia);
        tempof = clock();
        tempo_tot = ((float)(tempof - tempoini) / CLOCKS_PER_SEC);
        fprintf(arquivo1, "%.8f\n", tempo_tot);
        
        copiaVetor(&copia, &v);
        tempoini = clock();
        quickSort(&copia);
        tempof = clock();
        tempo_tot = ((float)(tempof - tempoini) / CLOCKS_PER_SEC);
        fprintf(arquivo1, "%.8f\n", tempo_tot);
        
        copiaVetor(&copia, &v);
        tempoini = clock();
        mergeSort(&copia);
        tempof = clock();
        tempo_tot = ((float)(tempof - tempoini) / CLOCKS_PER_SEC);
        fprintf(arquivo1, "%.8f\n", tempo_tot);
        
       preencheVetor(&v);
    }
    fclose(arquivo1);
    printf("Tempos salvos em temposSorts\n");
}
