#include "vetor.h"
#include "vetor.c"
#include <stdio.h>
#include <stdlib.h>
#include <time.h>


int main(){
    FILE *arquivo1 = fopen("tempos_busca_binaria.txt", "w");
    if (arquivo1 == NULL) {
        printf("Erro ao abrir arquivo!\n");
        return 1;
    }
    FILE *arquivo2 = fopen("tempos_busca_seq.txt", "w");
    if (arquivo2 == NULL) {
        printf("Erro ao abrir arquivo!\n");
        return 1;
    }
    
    tipoVetor v,v1,tempos;
    criaVetor(&v,1e9);
    criaVetor(&v1,1e9);
    criaVetor(&tempos,30);

    preencheVetorOrdenado(&v);
    preencheVetor(&v1);
    int n,k;
    float tempo_tot = 0;

    for(int i = 0;i < 30 ;i++){
        if(i > 15){ //numero aleatorio
            n = rand();
            k=n;
        }
        else{
            n = rand() %(int) 1e9; //numero aleatorio dentro do vetor
            k=v.vet[n];
        }
        clock_t tempoini = clock();
        buscaBin(v,k);
        clock_t tempof = clock();
        tempo_tot = ((float)(tempof - tempoini) / CLOCKS_PER_SEC);
        fprintf(arquivo1, "%d;%.12f\n", i, tempo_tot);
        tempos.vet[i] = tempo_tot;
    }
    fprintf(arquivo1, "Desvio padrao: %.12f\n", calcularDPVetor(tempos));
    fclose(arquivo1);
    printf("Tempos salvos em tempos_busca_binaria.txt\n");

    //busca seq
    for(int i = 0;i < 30;i++){
        if(i < 15){ //numero aleatorio
            n = rand();
            k=n;
        }
        else{
            n = rand() % (int) 1e9; //numero aleatorio dentro do vetor
            k=v1.vet[n];
        }
        clock_t tempoini = clock();
        buscaSeqVetor(v1,k);
        clock_t tempof = clock();
        tempo_tot = (float)(tempof - tempoini) / CLOCKS_PER_SEC;
        fprintf(arquivo2, "%d;%.12f\n", i, tempo_tot);
        tempos.vet[i] = tempo_tot;
    }
    fprintf(arquivo2, "Desvio padrao: %.12f\n", calcularDPVetor(tempos));
    fclose(arquivo2);
    printf("Tempos salvos em tempos_busca_seq.txt");

    return 1;
}
